  gem 'rubocop', require: false
  gem 'annotate'
  gem 'byebug'
  gem 'awesome_print'
  gem 'better_errors'
  gem 'binding_of_caller'
  gem 'rspec-rails', '~> 3.0'
  gem 'web-console', '~> 2.0'
  gem 'spring'
